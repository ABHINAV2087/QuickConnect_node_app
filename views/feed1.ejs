<div id="main" style="height: 100vh; width: 100vw; overflow: scroll;">
    <% include ./partials/header.ejs %>
<div id="btns" style="position: absolute;right:2% ; top: 10%; display: flex; gap: 20px; align-items:center ;flex-direction: column;z-index: 11111;">
  <img src="<%= user.pic %>" alt="" style="height: 70px;width: 70px;border-radius: 50%;border: 1px solid black;object-fit:cover ;">  
  <a href="/profile" ><button type="button" class="btn btn-info " >Go to Your profile</button></a>
    
</div>
 <div  class="container d-flex flex-wrap" style="padding: 70px 50px ; gap: 30px;">
    <% posts.forEach(function(post){ %>
        <div class="card" style="width: 18rem;border: 1px solid black;">
          <div id="posthead" style="border-bottom: 1px solid black;" >
          <h7 class="card-title" style=" text-align: center; text-transform: capitalize;display: flex;align-items: center;padding-left: 10px; padding-bottom:1px;padding-top: 10px;gap: 20px;">
            <img src="<%= post.owner.pic %>" style="height: 40px; width: 40px; object-fit: contain; border-radius: 50%;" alt="">
            <a href="/profile/<%= user._id %>" class="" style="display: flex;text-decoration: none;color: black; "><%= post.owner.username %></a>
            
          </h7>
        </div>
          
          <div id="img" style="display: flex; justify-content: center;border-bottom: 1px solid black; ">
            <img src="<%= post.Image %>" class="card-img-top" alt="..." style="width: 12rem; height: 12rem; object-fit: contain; ">
          </div> 
         
            <div class="card-body" style="display: flex;width: 100%;flex-direction: column;margin-top: -20px;">
              
              <div id="likebtn" style="display: flex;justify-content: flex-end; align-items: center;gap: 10px;">
                <a href="/postlike/<%= post._id %>" style="text-decoration: none;color: brown;font-size: 1.5rem;"><i class="ri-heart-line"></i></a>
                <p style="font-size: 15px;margin-top: 15px;"><%= post.likes.length %></p>
              </div>
              
              <p style=" text-transform: capitalize;font-size:0.85rem; margin-top: -13px;"><%= post.caption %></p>
             
              
            </div>
          </div>
    <% }) %> 
 </div>




</div>


