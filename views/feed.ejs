<div id="main" style="height: 100vh; width: 100vw; overflow: scroll;">
    <% include ./partials/header.ejs %>
<div id="btns" style="position: absolute;right:2% ; top: 10%; display: flex; gap: 20px; align-items:center ;flex-direction: column;z-index: 11111;">
  <img src="<%= user.pic%>" alt="" style="height: 70px;width: 70px;border-radius: 50%;border: 1px solid black;">  
  <a href="/profile" ><button type="button" class="btn btn-info " >Go to Your profile</button></a>
    
</div>
 <div  class="container d-flex flex-wrap" style="padding: 70px 50px ; gap: 30px;">
    <% alluser.forEach(function(userdets){ %>
        <div class="card" style="width: 18rem;">
          <div id="img" style="display: flex; justify-content: center; ">
            <img src="<%= userdets.pic%>" class="card-img-top" alt="..." style="width: 12rem; height: 12rem; object-fit: contain; ">
          </div> 
            <div class="card-body">
              <h5 class="card-title" style="text-align: center; text-transform: capitalize;">
                <%= userdets.name %>
              </h5>
              <hr>
              <h6 style="display: flex; justify-content: space-between  ;"><span>Username :</span>
                <%= userdets.username %>
              </h5>
              <h6 style="display: flex; justify-content: space-between  ;"><span>Email :</span>
                <a href="mailto: <%= userdets.email %>"> <%= userdets.email %></a>
              </h5>
              <hr>
              <a href="/profile/<%= userdets._id %>" class="btn btn-primary" style="display: flex; justify-content: center;">About <%=userdets.name %></a>
            </div>
          </div>
    <% }) %> 
 </div>




</div>


